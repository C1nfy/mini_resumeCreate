.preview-container {
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

.resume {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.header {
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.name {
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.position {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.contact-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
  font-size: 24rpx;
}

.content {
  padding: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  padding-bottom: 16rpx;
  margin-bottom: 30rpx;
  border-bottom: 3rpx solid;
}

.skill-category {
  margin-bottom: 24rpx;
}

.skill-category-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.skill-item-text {
  font-size: 26rpx;
  line-height: 1.8;
  margin-bottom: 12rpx;
  color: #374151;
}

.skill-name-bold {
  font-weight: bold;
}

.experience-item {
  padding: 32rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid;
}

.exp-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
}

.company {
  font-size: 30rpx;
  font-weight: bold;
}

.exp-position {
  font-size: 28rpx;
  font-weight: 600;
}

.duration {
  font-size: 24rpx;
  color: #6b7280;
}

.education-item {
  font-size: 28rpx;
  line-height: 1.8;
}

.edu-school {
  font-weight: bold;
}

.edu-time {
  color: #6b7280;
  margin-left: 20rpx;
}

.certificates-text {
  font-size: 26rpx;
  color: #4a5568;
  line-height: 1.8;
}

.summary-section {
  padding: 32rpx;
  border-radius: 12rpx;
  border: 1rpx solid;
}

.summary-item {
  font-size: 26rpx;
  line-height: 1.8;
  margin-bottom: 20rpx;
  color: #374151;
}

.summary-title {
  font-weight: bold;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.action-bar button {
  flex: 1;
}