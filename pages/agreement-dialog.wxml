<view class="mask" wx:if="{{show}}" catchtap="onMaskTap">
  <view class="dialog" catchtap="stopPropagation">
    <view class="dialog-title">服务协议与隐私政策</view>
    <view class="dialog-content">
      <text>请您仔细阅读并同意</text>
      <text class="link" bindtap="openUserAgreement">《用户服务协议》</text>
      <text>和</text>
      <text class="link" bindtap="openPrivacyPolicy">《隐私政策》</text>
      <text>后继续使用我们的服务。我们将严格保护您的个人信息安全。</text>
    </view>
    <view class="dialog-footer">
      <button class="btn-cancel" bindtap="onDisagree">不同意</button>
      <button class="btn-confirm" bindtap="onAgree">同意</button>
    </view>
  </view>
</view>